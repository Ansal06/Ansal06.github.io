<!-- Hover glow script -->
<script>
  const hero = document.getElementById("hero");
  const glow = document.getElementById("hover-glow");
  const html = document.documentElement;

  hero.addEventListener("mousemove", (e) => {
    const r = hero.getBoundingClientRect();
    const x = e.clientX - r.left;
    const y = e.clientY - r.top;

    // Check light vs dark
    const isLight = html.classList.contains("light");

    glow.style.background = isLight
      ? `radial-gradient(
          600px circle at ${x}px ${y}px,
          rgba(30, 64, 260, 0.30),   /* darker blue for light mode */
          transparent 60%
        )`
      : `radial-gradient(
          600px circle at ${x}px ${y}px,
          rgba(96, 165, 250, 0.22),  /* current glow for dark mode */
          transparent 40%
        )`;
  });
</script>

<style>

/* Hover glow layer */
#hover-glow {
  position: absolute;
  inset: 0;
  z-index: 1;
  pointer-events: none;
  transition: background 0.15s ease;
}

/* Main text content */
#hero .hero-content {
  position: relative;
  z-index: 2;
}


/* --- Social icon animation --- */

.social-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--subtext);         
  opacity: 0.85;             
  transition: color 0.25s ease, transform 0.2s ease, opacity 0.2s ease;
}

.social-icon:hover {
  color: var(--accent-color);
  opacity: 1;
  transform: translateY(-3px);
}


/* --- Physics symbol opacity control --- */

/* Dark mode ‚Äî softer symbols */
html:not(.light) #hero text {
  opacity: 0.045;
}

/* Light mode ‚Äî slightly stronger */
html.light #hero text {
  opacity: 0.085;
}

/* --- Name font --- */
.name-font {
  letter-spacing: -0.03em;
}

.name-gradient {
  color: #2563eb;   /* nice modern blue */
}

.name-space {
  margin-left: 0.20em;
}

/* "I'm" styling */
.im-text {
  font-family: "Latin Modern Roman", "CMU Serif", serif;
  font-weight: 500;
  color: var(--text);
  letter-spacing: -0.01em;
}

.hero-content p {
  font-family: "Latin Modern Roman", "CMU Serif", serif;
  font-weight: 400;
  color: var(--subtext);
  letter-spacing: 0.02em;
  font-size: 1.05rem;
}

/* Name gradient accent */
.name-gradient {
  color: #3b82f6;   
  font-family: "Latin Modern Roman", "CMU Serif", serif;
  letter-spacing: -0.03em;
}

/* --- Waving emoji --- */
.wave {
  display: inline-block;
  animation: wave 1.5s infinite;
  transform-origin: 70% 70%;
}

@keyframes wave {
  0% { transform: rotate(0deg); }
  20% { transform: rotate(14deg); }
  40% { transform: rotate(-8deg); }
  60% { transform: rotate(14deg); }
  80% { transform: rotate(-4deg); }
  100% { transform: rotate(0deg); }
}

.header {
  font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif; font-weight: 450;
}

.footer {
  background-color: var(--bg);
  color: var(--text);
}

#hero .bg-svg path {
  stroke: color-mix(in srgb, var(--accent-color) 35%, transparent);
  stroke-width: 0.3;
  opacity: 0.05;
}

.hero-content {
  position: relative;
  z-index: 2;
}

.social-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

#hero svg,
#hover-glow {
  pointer-events: none;
}
</style>
