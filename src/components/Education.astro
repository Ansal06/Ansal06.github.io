---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education?.length > 0;
---

{hasEducation && (
<section id="education" class="py-16">
  <div class="max-w-5xl mx-auto px-6">

    <div class="space-y-12">
      {siteConfig.education.map((edu) => (
        <div>

          <!-- Header Row -->
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline">

            <div>
              <h3 class="text-lg sm:text-xl font-semibold text-[var(--text)]">
                {edu.degree}
              </h3>
              <p class="text-[var(--accent-color)] font-medium">
                {edu.school}
              </p>
            </div>

            <p class="text-sm text-[var(--subtext)] whitespace-nowrap mt-2 sm:mt-0">
              {edu.dateRange}
            </p>

          </div>

          <!-- Divider -->
          <div class="border-t border-[var(--border)] my-3"></div>

          <!-- Achievements -->
          <ul class="space-y-2 ml-4">
            {edu.achievements.map((item) => (
              <li class="text-sm text-[var(--subtext)] leading-relaxed">
                â€¢ {item}
              </li>
            ))}
          </ul>

        </div>
      ))}
    </div>

  </div>
</section>
)}
