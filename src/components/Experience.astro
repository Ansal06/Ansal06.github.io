---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section id="experience" class="px-6 py-16 sm:py-20 lg:py-28">

    <!-- Section title -->
    <h2 class="text-3xl sm:text-4xl font-bold mb-8">
      Experience
    </h2>

    <!-- Cards grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

      {siteConfig.experience.map((exp) => (
        <div class="exp-card">

          <div class="exp-header">
            <h3>{exp.title}</h3>
            <span>{exp.dateRange}</span>
          </div>

          <p class="exp-company">
            {exp.company}
          </p>

          <ul>
            {exp.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>

        </div>
      ))}

    </div>
  </section>
)}

<style>
.exp-card {
  background: color-mix(in srgb, var(--bg) 96%, var(--accent-color) 4%);
  border: 1px solid color-mix(in srgb, var(--text) 12%, transparent);
  border-radius: 14px;
  padding: 1.4rem;
  transition: transform 0.15s ease, border-color 0.15s ease;
}

.exp-card:hover {
  transform: translateY(-3px);
  border-color: color-mix(in srgb, var(--accent-color) 40%, transparent);
}

.exp-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 1rem;
}

.exp-header h3 {
  font-size: 1.05rem;
  font-weight: 600;
  color: var(--text);
  line-height: 1.35;
}

.exp-header span {
  font-size: 0.85rem;
  color: var(--subtext);
  white-space: nowrap;
}

.exp-company {
  font-size: 0.95rem;
  color: var(--accent-color);
  margin: 0.4rem 0 0.7rem;
}

.exp-card ul {
  margin-left: 1rem;
  color: var(--subtext);
}

.exp-card li {
  margin: 0.35rem 0;
  line-height: 1.45;
}
</style>
